namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"
namespace dita = "http://dita.oasis-open.org/architecture/2005/"

learningContent-info-types |=  empty 
learningContent = learningContent.element
learningContentbody = learningContentbody.element
learningContent.content = title, titlealts?, (shortdesc | abstract)?, prolog?, learningContentbody, related-links?, learningContent-info-types*
learningContent.attributes = 
attribute id { xsd:ID}, conref-atts, select-atts, localization-atts, 
attribute outputclass { text}?
learningContent.element = 
element learningContent {learningContent.attlist, learningContent.content}
learningContent.attlist &= learningContent.attributes, arch-atts, domains-att
learningContentbody.content = (lcIntro | lcDuration | lcObjectives)*, lcChallenge?, lcInstruction?, section*
learningContentbody.attributes = univ-atts, 
attribute outputclass { text}?
learningContentbody.element = 
element learningContentbody {learningContentbody.attlist, learningContentbody.content}
learningContentbody.attlist &= learningContentbody.attributes
learningContent.attlist &= global-atts, 
attribute class { text}?
learningContentbody.attlist &= global-atts, 
attribute class { text}?